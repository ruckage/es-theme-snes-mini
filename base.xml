<theme>

    <formatVersion>4</formatVersion>
	
	<view name="system">
	
		<carousel name="systemcarousel">
			<type>horizontal</type>
			<color>00000000</color>
			<logoScale>1</logoScale>
		</carousel>

		<text name="systemInfo">
			<backgroundColor>00000000</backgroundColor>
			<color>FFFFFF</color>
			<fontPath>./art/NESCyrillic_gamelist.ttf</fontPath>
			<fontSize>0.0592592592592593</fontSize>
		</text>
			
		<image name="carousel_bar_background" extra="true">
			<path>./art/carousel_bar_background.png</path>
			<origin>0.5 0</origin>
		</image>	
			
		<image name="carousel_bar_outline" extra="true">
			<path>./art/carousel_bar_outline.png</path>
			<origin>0.5 0</origin>
		</image>	
	
		<helpsystem name="help">
			<pos>2 2</pos>
			<textColor>f11c00</textColor>
			<iconColor>f11c00</iconColor>
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<fontSize>0.06666666666666</fontSize>
		</helpsystem>	

		<image name="background" extra="true">

		</image>

		<image name="logo">
			<path>./art/icons/$system.png</path>
		</image>
			
		<image name="carousel_bar_background" extra="true">
			<color>4d4d4d9a</color>
		</image>

		<image name="carousel_bar_outline" extra="true">
			<color>ffffffaa</color>
		</image>			
		
	</view>

	
	

    <view name="video">
		
		<video name="md_video">
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<delay>2</delay>			
		</video>
		
		<image name="md_marquee">
			<pos>2 2</pos>
		</image>

	</view>	

	
	
	
	<view name="basic, detailed, video">
	
		<helpsystem name="help">
			<pos>2 2</pos>
			<textColor>f11c00</textColor>
			<iconColor>f11c00</iconColor>
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<fontSize>0.06666666666666</fontSize>
		</helpsystem>	
	
		<image name="logo">
			<pos>2 2</pos>
			<maxSize>0.1 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.02</fontSize>
			<size>0.2 0.2</size>
			<pos>1 1</pos>
		</text>
		
		<text name="md_rating, md_developer, md_publisher, md_genre, md_playcount">
			<forceUppercase>1</forceUppercase>
			<fontSize>0.0592592592592593</fontSize>
			<color>ffffff</color>
		</text>	
		
		<text name="md_playcount">
			<fontPath>./art/NESCyrillic_gamelist.ttf</fontPath>
		</text>
		
				
		<text name="md_developer, md_publisher, md_genre">
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<alignment>center</alignment>
		</text>
		
		<text name="md_description">
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<fontSize>0.0444444444444444</fontSize>
			<size>0.2447916666666667 0.437037037037037</size>
			<alignment>left</alignment>
			<lineSpacing>0.75</lineSpacing>
			<color>ffffff</color>
		</text>
		
		<datetime name="md_lastplayed">
		<pos>1 1</pos>
		<size>0.2 0.2</size>
		</datetime>
		
		<datetime name="md_releasedate">
			<fontPath>./art/TinyUnicode.ttf</fontPath>
			<size>0.25 0.0333333333333333</size>
			<fontSize>0.0592592592592593</fontSize>			
		</datetime>		
	
		<rating name="md_rating">
			<size>0.0166666666666667 0.0296296296296296</size>		
		</rating>
		
		<textlist name="gamelist">
			<forceUppercase>1</forceUppercase>
			<scrollSound>./sounds/se_sys_cursor.wav</scrollSound>
			<fontSize>0.0592592592592593</fontSize>
			<selectorImagePath>./art/selector_bar.png</selectorImagePath>
		</textlist>		
			
		<sound name="launch">
			<path>./sounds/se_sys_click_game.wav</path>
		</sound>		

	</view>
	
</theme>