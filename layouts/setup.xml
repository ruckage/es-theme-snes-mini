<theme>
    <formatVersion>3</formatVersion>
	
	<variables>
		<listWidth>0.4208333333333333</listWidth>
		<listx>0.2895833333333333</listx>		
	</variables>
	
	<feature supported="carousel">

		<view name="system">
		
		<image name="background" extra="true">
			<size>0 1</size>
		</image>

			<carousel name="systemcarousel">
				<pos>-0.05 0.3</pos>
				<size>1.1 0.4</size>
				<logoSize>0.2 0.3851851851851852</logoSize>
				<maxLogoCount>5</maxLogoCount>
				<zIndex>101</zIndex>
			</carousel>

			<text name="systemInfo">
				<pos>0.00 0.2222222222222222</pos>
				<size>1 0.050</size>
				<zIndex>102</zIndex>				
			</text>
			
		<image name="carousel_bar_background" extra="true">
			<size>0 0.0666666666666667</size>
			<pos>0.5 0.2222222222222222</pos>
			<path>./../art/carousel_bar_background.png</path>
			<origin>0.5 0</origin>
			<zIndex>100</zIndex>
			<color>4d4d4d9a</color>
		</image>

		<image name="carousel_bar_outline" extra="true">
			<size>0 0.0666666666666667</size>
			<pos>0.5 0.2222222222222222</pos>
			<path>./../art/carousel_bar_outline.png</path>
			<origin>0.5 0</origin>
			<zIndex>101</zIndex>
			<color>ffffffaa</color>
		</image>

<!--
		
		<image name="carousel_bar_selection" extra="true">
			<size>0 0.4</size>
