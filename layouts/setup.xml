			<zIndex>101</zIndex>
		</image>		

		<image name="carousel_bar_selection_outline" extra="true">
			<size>0 0.4</size>
			<pos>0.5 0.3</pos>
			<zIndex>102</zIndex>
			<color>ffffffbe</color>
		</image>	
		
-->

		<image name="system_help" extra="true">
			<size>0.4416666666666667 0</size>
		</image>	

		</view>

	</feature>	

    <view name="basic, detailed, video">
	
	
		<textlist name="gamelist">
			<horizontalMargin>0.0166666666666667</horizontalMargin>		
			<selectorImagePath>./../art/selector_bar${wide}.png</selectorImagePath>			
		</textlist>
	
		<image name="gamelist_background" extra="true">
			<path>./../art/gamelist_background${wide}.png</path>
			<size>0 0.7333333333333333</size>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<color>4d4d4d9a</color>
		</image>
		
		<image name="gamelist_outline" extra="true">
			<path>./../art/gamelist_outline${wide}.png</path>
			<size>0 0.7333333333333333</size>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<color>ffffffbe</color>
			<zIndex>200</zIndex>
		</image>
			
		<image name="background" extra="true">
			<size>0 1</size>
		</image>
		
		<image name="gamelist_help" extra="true">
			<size>0.4416666666666667 0</size>
		</image>
		
		<image name="md_image">
			<maxSize>0.2416666666666667 0.4296296296296296</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<video name="md_video">
			<maxSize>0.2416666666666667 0.4296296296296296</maxSize>
		</video>
		
		<text name="md_developer, md_publisher, md_genre">
			<size>0.25 0.0333333333333333</size>
		</text>		
		
		<text name="md_playcount">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
		</text>
		
		<text name="md_players">
			<alignment>left</alignment>
			<size>0.05 0.0555555555555556</size>
		</text>
		
		<text name="md_description">
			<color>ffffff</color>
		</text>

